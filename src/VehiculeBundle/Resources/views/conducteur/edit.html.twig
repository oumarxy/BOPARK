            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>#}
{% endblock %}

{% block scriptsjs %}
    <script src="{{ asset('custom/js/datedropper.js') }}"></script>
    <script>
        $( ".mydate" ).dateDropper({
            lang: 'fr',
            animate:true,
            format:'d-m-Y'
        });
    </script>
{% endblock %}